<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <!-- custom -->
    <link rel='stylesheet' href='/stylesheets/style.css'>
  </head>
  <body>
    <% include ../layout/header.ejs %>
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <form role="form" action="#" method="POST" id="webconfig">
            <div class="box-body">
              <div class="row">
                <div class="form-group has-feedback col-lg-6">
                  <label for="title">标题</label><b class="text-danger"> *</b>
                  <input type="title" class="form-control" name="title" placeholder="企业标题" required="true">
                </div>
                <div class="form-group col-lg-6">
                  <label for="url">URL</label><b class="text-danger"> *</b>
                  <input type="text" class="form-control" name="url" placeholder="Footer处展示" required="true">
                </div>
              </div>
              <div class="form-group">
                <label for="desc">描述</label>
                <textarea rows="3" class="form-control" name="desc" placeholder="描述" maxlength="200"></textarea>
                <p class="help-block">描述不超过200字符</p>
              </div>
              <div class="row">
                <div class="form-group col-lg-6">
                  <label for="register">是否启用注册</label>
                  <div class="radio">
                    <label class="radio-inline">
                      <input type="radio" name="register" value=1 > 开启
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="register" value=0 > 关闭
                    </label>
                  </div>
                </div>
                <div class="form-group col-lg-6">
                  <label for="verifier">是否启用验证码</label>
                  <div class="radio">
                    <label class="radio-inline">
                      <input type="radio" name="verifier" value=1 > 开启
                    </label>
                    <label class="radio-inline">
                      <input type="radio" name="verifier" value=0 > 关闭
                    </label>
                  </div>
                </div>
              </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
              <button type="reset" class="btn btn-default">重置</button>
              <button type="submit" class="btn btn-primary">提交</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <!-- jQuery 3 -->
    <script src="/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- jquery-validation -->
    <script src="/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/jquery-validation/dist/localization/messages_zh.js"></script>

    <script>
      $('form').validate({
        errorClass: 'text-danger',
        errorElement: 'em',
      });
    </script>
  </body>
</html>
